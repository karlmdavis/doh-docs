source 'https://rubygems.org'

##
# Install all these gems by running `bundle install`
##

# The static site generator used to compile this whole project.
gem 'jekyll'

# Bring in Bootstrap. This works in concert with the custom
# `_plugins/_bootstrap_imports.rb` plugin that I had to create for it.
#
# If Bootstrap's JavaScript is needed, work still remains
# to include it. This gem does expose it, but a custom Jekyll generator plugin
# would likely be needed to add it to the site's output.
gem 'bootstrap', '~> 5.1.3'
gem 'sass-embedded', '~> 1.0'

# Used for code highlighting.
gem 'rouge'
